{{#if isEditing}}
    {{edit-wheater class='edit' value=wheater.title
    focus-out='save'
    insert-newline='save'}}
{{else}}
    {{input type='checkbox' checked=wheater.isCompleted class='toggle'}}
    <label {{action 'editTodo' on='doubleClick'}}>{{wheater.name}}</label>
    <button {{action 'removeTodo'}} class='destroy'></button>
{{/if}}
