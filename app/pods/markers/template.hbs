<style>
    .ember-cli-g-map {
        height: 450px;
    }
</style>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Traffic Map&nbsp;</h3>

        <div class="box-tools">
            <div class="input-group">
                {{#gmap-search refreshPlace='refreshPlace'}}{{/gmap-search}}
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
            </div>
        </div>

    </div>
    <div class="box-body">
        {{g-maps name="my-map" lat=lat lng=lng zoom=zoom click="clickAction" markers=markersForDisplay}}
        {{!--google-map latitude="-7.290293" longitude="112.727226"--}}
        {{!--google-maps-markup map=map--}}
        {{!--userLocation--}}
    </div>
</div>
{{#marker-new
isShowingModal=isShowingModal
newLat=newLat
newLng=newLng
categories=categories
category=category
triggerSuggestions=triggerSuggestions
refreshOptionsCategory="refreshOptionsCategory"
itemSelectedCategory="itemSelectedCategory"
weathers=weathers
weather=weather
refreshOptionsWeather="refreshOptionsWeather"
itemSelectedWeather="itemSelectedWeather"
respondent=respondent
respondents=respondents
refreshOptionsRespondent="refreshOptionsRespondent"
itemSelectedRespondent="itemSelectedRespondent"
createNew="createNew"
}}
{{/marker-new}}